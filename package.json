{
  "name": "advancepay-backend",
  "version": "1.0.0",
  "description": "Backend server for AdvancePay decentralized payroll and wage advance platform",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "npm run clean && tsc",
    "clean": "rimraf dist",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "migrate:add-wallet-data": "ts-node src/scripts/run-migration.ts",
    "prepare": "[ \"$NODE_ENV\" != \"production\" ] && husky install || echo 'Skipping husky in production'",
    "swagger": "ts-node src/swagger.ts",
    "db:migrate": "npm run build && sequelize db:migrate",
    "db:seed": "npm run build && sequelize db:seed:all",
    "db:migrate:undo": "npm run build && sequelize db:migrate:undo",
    "db:migrate:undo:all": "npm run build && sequelize db:migrate:undo:all",
    "db:create": "npm run build && sequelize db:create",
    "db:drop": "npm run build && sequelize db:drop"
  },
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/redis": "^4.0.11",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.44.2",
    "ethers": "^6.11.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^7.0.3",
    "pg": "^8.16.2",
    "pg-hstore": "^2.3.4",
    "redis": "^5.1.0",
    "sequelize": "^6.37.7",
    "swagger-autogen": "^2.23.7",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.6.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.9",
    "@types/node": "^24.0.4",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.15.4",
    "@types/sequelize": "^4.28.20",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "@types/validator": "^13.15.2",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "drizzle-kit": "^0.31.3",
    "eslint": "^8.56.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "nodemon": "^3.1.10",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "sequelize-cli": "^6.6.3",
    "supertest": "^6.3.4",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
